<Window x:Class="ERP_Client.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Micro ERP"
        Height="400"
        Width="300"
        Background="WhiteSmoke">
    
    <UniformGrid Columns="2"  Name="StartList" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">
        <UniformGrid.Resources>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="5"></Setter>
                <Setter Property="Width" Value="100"></Setter>
                <Setter Property="Height" Value="60"></Setter>
            </Style>
        </UniformGrid.Resources>
        
        <Button Name="BKontakte" Content="Kontakte"/>
        <Button Name="BRechnungen" Content="Rechnungen"/>
        <Button Name="BProjekte" Content="Projekte"/>
        <Button Name="BAngebote" Content="Angebote"/>
        <Button Name="BZeiterfassung" Content="Zeiterfassung"/>
        <Button Name="BAngestellte" Content="Angestellte"/>
        <Button Name="BBankkonto" Content="Bankkonto"/>
        <Button Name="BLogin" Content="Login"/>
    </UniformGrid>
</Window>
