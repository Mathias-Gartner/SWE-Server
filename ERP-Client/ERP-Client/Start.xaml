<Window x:Class="ERP_Client.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Micro ERP"
        WindowStartupLocation="CenterScreen"
        Height="400"
        Width="300"
        Background="WhiteSmoke">
    
    <UniformGrid Columns="2"  Name="StartList" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">
        <UniformGrid.Resources>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="5"></Setter>
                <Setter Property="Width" Value="100"></Setter>
                <Setter Property="Height" Value="60"></Setter>
            </Style>
        </UniformGrid.Resources>
        
        <Button Name="BKontakte" Content="Kontakte" ToolTip="Verwalten von Kontakten" Click="BKontakte_Click"/>
        <Button Name="BRechnungen" Content="Rechnungen" ToolTip="Verwalten von Rechnungen" Click="NotImplement"/>
        <Button Name="BProjekte" Content="Projekte" ToolTip="Verwalten von Projekten" Click="NotImplement"/>
        <Button Name="BAngebote" Content="Angebote" ToolTip="Verwalten von Angeboten" Click="NotImplement"/>
        <Button Name="BZeiterfassung" Content="Zeiterfassung" ToolTip="Zeiterfassung" Click="NotImplement"/>
        <Button Name="BAngestellte" Content="Angestellte" ToolTip="Verwalten von Angestellten" Click="NotImplement"/>
        <Button Name="BBankkonto" Content="Bankkonto" ToolTip="Verwalten des Bankkonto" Click="NotImplement"/>
        <Button Name="BLogin" Content="Login" ToolTip="Mit seinem Account anmelden" Click="NotImplement"/>
    </UniformGrid>
</Window>
